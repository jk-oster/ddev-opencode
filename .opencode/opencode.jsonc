// #ddev-generated
{
    "$schema": "https://opencode.ai/config.json",
    "default_agent": "plan",
    "mcp": {

      // https://laravel.com/ai/boost
      "laravel-boost": {
        "type": "local",
        "command": ["php", "artisan", "boost:mcp"],
        "enabled": false
      },

      // https://github.com/hauptsacheNet/clickup-mcp
      "clickup": {
        "type": "local",
        "command": [ "npx", "-y", "@hauptsache.net/clickup-mcp@latest" ],
        "enabled": false,
        "environment": {
          "CLICKUP_API_KEY": "<API_KEY>",
          "CLICKUP_TEAM_ID": "<TEAM_ID>",
          "CLICKUP_MCP_MODE": "read-minimal"
        }
      }
    }
}
